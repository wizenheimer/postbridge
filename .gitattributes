# Auto detect text files and perform LF normalization
* text=auto

# TypeScript files
*.ts text eol=lf
*.tsx text eol=lf
*.d.ts text eol=lf

# JavaScript files
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# JSON files
*.json text eol=lf
*.jsonc text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.prettierrc text eol=lf
.prettierignore text eol=lf

# Markdown files
*.md text eol=lf
*.mdx text eol=lf

# Shell scripts
*.sh text eol=lf

# Package files
package.json text eol=lf
package-lock.json text eol=lf linguist-generated=true
pnpm-lock.yaml text eol=lf linguist-generated=true
yarn.lock text eol=lf linguist-generated=true

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
.prettierrc export-ignore
.eslintrc* export-ignore
tests/ export-ignore
examples/ export-ignore
stories/ export-ignore
*.test.ts export-ignore
*.test.tsx export-ignore
*.spec.ts export-ignore
*.spec.tsx export-ignore

# Language statistics - count TypeScript primarily
*.ts linguist-detectable=true
*.tsx linguist-detectable=true
*.js linguist-detectable=false
*.jsx linguist-detectable=false
*.mdx linguist-detectable=false
*.json linguist-detectable=false

